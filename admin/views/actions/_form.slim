- error = @action.errors.include?(:user_id)
fieldset class='control-group#{error ? ' has-error' : ''}'
  = f.label "Identyfikator użytkownika", :class => 'control-label'
  div class='controls'
    = f.number_field :user_id, :class => 'form-control input-large input-with-feedback', :autofocus => true
    span class='help-inline' = error ? f.error_message_on(:user_id, :class => 'text-error') : nil
- error = @action.errors.include?(:activity_id)
fieldset class='control-group#{error ? ' has-error' : ''}'
  = f.label "Identyfikator aktywności", :class => 'control-label'
  div class='controls'
    = f.number_field :activity_id, :class => 'form-control input-large input-with-feedback'
